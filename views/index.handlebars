				console.log(task);
				console.log(id);
				console.log(plyrID);
				console.log(rating);

				function levelUp() {
					var result = (Math.floor(exp / 100) + 1);
					console.log(plyrLvl + " " + result); 

					if (plyrLvl != result) {
						console.log("Level update");

						$.post('/quests/levelup/' + plyrID, function(data){
